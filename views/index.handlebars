<h1>Burger Time!</h1>

<h2>Burgers that have not been devoured</h2>
    <ul>
        {{#each burgers}}
            {{#unless devoured}}
                <li>{{burger_name}} <button class="tbDevoured" data-id="{{id}}" data-burger="{{devoured}}">DEVOUR</button></li>
            {{/unless}}
        {{/each}}
    </ul>

<h2>Burgers that have been devoured</h2>
    <ul>
        {{#each burgers}}
            {{#if devoured}}
                <li>{{burger_name}} <button class="tbUnDevoured" data-id="{{id}}">UP CHUCK</button></li>
            {{/if}}
        {{/each}}
    </ul>